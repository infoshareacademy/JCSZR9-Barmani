@model DrinkItUpWebApp.Models.DifficultyModel



<div class="accordion container-fluid" id="accordionCRD">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button bg-warning fw-bold text-black" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Dodaj poziom trudności
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse bg-dark text-white" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <div class="row">
                    <div class="col-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label for="Name" class="control-label">Nazwa poziomu trudności:</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group my-3">
                                <input type="submit" value="Dodaj poziom trudności" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed bg-warning fw-bold text-black" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Edytuj poziom trudności
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse bg-dark text-white" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <div class="row">
                    <div class="col-12">
                        <form asp-action="Edit" asp-route-unitid="@Model.DifficultyId">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label for="DifficultyId" class="control-label">Id</label>
                                <input asp-for="DifficultyId" class="form-control" disabled />
                                <span asp-validation-for="DifficultyId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Name" class="control-label">Nazwa poziomu trudności:</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group my-3">
                                <input type="submit" value="Edytuj poziom trudności" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed bg-warning fw-bold text-black" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Usuń poziom trudności
            </button>
        </h2>
        <div id="collapseThree" class="accordion-collapse collapse show bg-dark text-white" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <div class="row">
                    <div class="col-12">
                        <form asp-action="Delete" asp-route-id="@Model.DifficultyId">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label for="DifficultyId" class="control-label">Id</label>
                                <input asp-for="DifficultyId" class="form-control" disabled />
                                <span asp-validation-for="DifficultyId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Name" class="control-label">Nazwa poziomu trudności:</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            @if (Model.IsUsed)
                            {
                                <p class="text-warning">Usuń/zmień poziom trudności ze wszystkich drinków, żeby odblokować możliwość usunięcia ich z bazy!</p>

                                <div class="form-group my-3">
                                    <input type="submit" value="Usuń poziom trudności" disabled class="btn btn-warning" />
                                </div>
                            }
                            else
                            {
                                <div class="form-group my-3">
                                    <input type="submit" value="Usuń poziom trudności" class="btn btn-warning" />
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>